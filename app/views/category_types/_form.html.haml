= form_for @category_type do |f|
  - if @category_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category_type.errors.count, "error")} prohibited this category_type from being saved:"
      %ul
        - @category_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
